<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_picking_list_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="单号："
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_middle"/>

        <TextView
            android:id="@+id/tv_picking_list_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left|center_vertical"
            android:text="时间："
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_middle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_picking_list_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:layout_marginTop="5dp"
            android:gravity="left|center_vertical"
            android:text="数量："
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_middle"/>

        <TextView
            android:id="@+id/tv_picking_list_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:layout_marginTop="5dp"
            android:text="类型："
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_middle"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_picking_list_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left|center_vertical"
            android:text="备注："
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_middle"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btn_collect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_collect_btn_selector"
            android:gravity="center"
            android:text="@string/text_collect"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_middle"/>
    </FrameLayout>

</LinearLayout>
